{
    "name": "vite-plugin-i18n-collector",
    "version": "1.0.0",
    "type": "module",
    "description": "A Vite plugin that automatically collects and merges i18n translation files from anywhere in your directory into a single JSON bundle with full hot-reload support",
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "unbuild",
        "prepare": "husky"
    },
    "keywords": [
        "vite",
        "i18n",
        "collector",
        "merge",
        "translations"
    ],
    "author": "Dzmitry Muzychenka",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/config-conventional": "^20.0.0",
        "@types/node": "^24.10.1",
        "husky": "^9.1.7",
        "typescript": "^5.9.3",
        "unbuild": "^3.6.1"
    },
    "peerDependencies": {
        "vite": "^7.2.4"
    }
}
