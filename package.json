{
    "name": "vite-plugin-i18n-collector",
    "version": "1.0.2",
    "type": "module",
    "description": "A Vite plugin that automatically collects and merges i18n translation files from anywhere in your directory into a single JSON bundle with full hot-reload support",
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "unbuild",
        "prepare": "husky",
        "semantic-release": "dotenv -e .env -- semantic-release"
    },
    "keywords": [
        "vite",
        "i18n",
        "collector",
        "merge",
        "translations"
    ],
    "author": "Dzmitry Muzychenka",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/muzychenka/vite-plugin-i18n-collector"
    },
    "bugs": {
        "url": "https://github.com/muzychenka/vite-plugin-i18n-collector/issues"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^20.0.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.2",
        "@semantic-release/npm": "^13.1.2",
        "@types/node": "^24.10.1",
        "dotenv-cli": "^11.0.0",
        "husky": "^9.1.7",
        "semantic-release": "^25.0.2",
        "typescript": "^5.9.3",
        "unbuild": "^3.6.1"
    },
    "peerDependencies": {
        "vite": "^7.2.4"
    }
}
